<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".GoogleMapsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AirBnB Map"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#8260BF"
        android:padding="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AirBnB Map is a mapping Service that allows users to search and view different house locations.You Can Use the map to zoom in and out and move around to find the specific houses you are interested in.  You can also view photos, read reviews, and get directions to the houses you are interested in. "
        android:textSize="17dp"
        android:textColor="@color/purple_200"
        android:padding="20dp"
        android:textStyle="bold"/>

    <SearchView
        android:id="@+id/serchView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:elevation="20dp"
        android:background="@color/purple_200"
        android:padding="20dp"
        android:queryHint="Search House..."
        tools:targetApi="lollipop" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>